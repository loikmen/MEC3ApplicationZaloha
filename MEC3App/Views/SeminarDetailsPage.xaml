                    <Button  TextColor="white" Padding="20,5" HeightRequest="47" WidthRequest="155" VerticalOptions="Start"
                            BackgroundColor="Transparent"  Command="{Binding OpenWebCommand2}" FontFamily="ThemeFont" HorizontalOptions="Start">



                    </Button>
 -->

                </StackLayout>
            </Grid>
        </ScrollView>
    </Grid>
</ContentPage>